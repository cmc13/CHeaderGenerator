<Window x:Class="CHeaderGenerator.UI.View.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dlg="clr-namespace:CHeaderGenerator.UI"
        Title="{Binding Title}" SizeToContent="Height" Width="450" Topmost="True"
        dlg:DialogCloser.DialogResult="{Binding DialogResult}">
    <StackPanel>
        <TextBlock HorizontalAlignment="Center" Padding="5" Text="{Binding Message}" TextWrapping="Wrap" />
        <ProgressBar Height="20" Margin="5" Minimum="{Binding Minimum}" Maximum="{Binding Maximum}" Value="{Binding ProgressValue}" />
    </StackPanel>
</Window>
